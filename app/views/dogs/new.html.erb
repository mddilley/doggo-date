<div class="container text-left text-light align-middle form-group">
  <h3>Enter your dog's details below.</h3>

  <% if @dog.errors.any? %>
    <div class="error_message">
      <ul>
      <% @dog.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @dog, url: user_dogs_path do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :age %><br>
    <%= f.number_field :age %><br>

    <%= f.label :breed %><br>
    <%= f.text_field :breed, list: "dog_breeds" %>
    <%== data_list("dog_breeds", breeds_for_select) %><br>

    <%= f.label :sex %><br>
    <div class="form-check">
      <%= f.radio_button "sex", "Male", class: "form-check-input"  %>
      <%= f.label "Male", class: "form-check-label" %><br>
      <%= f.radio_button "sex", "Female", class: "form-check-input"  %>
      <%= f.label "Female", class: "form-check-label" %>
    </div>

    <%= f.label :weight %><br>
    <%= f.number_field :weight %><br>

    <%= f.label "Fixed?" %>
    <%= f.check_box :fixed, {:checked => true}, true, false %><br>

    <%= f.label :friendly_rating %><br>
    <%= f.number_field :friendly_rating, in: 1...11 %><br>

    <%= f.label :aggressive_rating %><br>
    <%= f.number_field :aggressive_rating, in: 1...11 %><br><br>

    <%= f.submit "Add Dog", class: "btn btn-success btn-lg" %>
  <% end %>
</div>
