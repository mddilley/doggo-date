<%= render partial: "dog_img_about", locals: {dog: @dog, div_class: "", complete: true, align: "left"} %>

<div class="container">
  <h4 class="yellow-text"><%= @dog.name %>'s Playdates</h4>
  <%= has_no_play_dates?(@dog) %>
  <p><%= render partial: "play_dates/play_date_list", locals: {playdates: @dog.play_dates} %></p>
</div>

<p class="indent-10">
  <%= link_to "Update Dog", edit_user_dog_path(current_user, @dog), class: "btn btn-success btn-lg" if current_user.dogs.include?(@dog)%><br><br>
  <%= link_to 'Remove Dog', user_dog_path(current_user, @dog), data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger btn-lg" if current_user.dogs.include?(@dog)%>
</p>
