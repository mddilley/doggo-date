<%= f.label :name %><br>
<%= f.text_field :name, class: "form-control-sm" %><br>

<%= f.label :sex %><br>
<div class="form-check">
  <%= f.radio_button "sex", "Male", class: "form-check-input" %>
  <%= f.label "Male", class: "form-check-label" %><br>
  <%= f.radio_button "sex", "Female", class: "form-check-input"  %>
  <%= f.label "Female", class: "form-check-label" %>
</div>

<%= f.label :breed %><br>
<%= f.text_field :breed, list: "dog_breeds", class: "form-control-sm" %>
<%== data_list("dog_breeds", breeds_for_select) %><br>

<%  if complete == true %>

  <%= f.label :age %><br>
  <%= f.number_field :age %><br>

  <%= f.label :weight %><br>
  <%= f.number_field :weight, min: 0 %><br>

  <%= f.label "Fixed?" %>
  <%= f.check_box :fixed, {:checked => false}, true, false %><br>

  <%= f.label :friendly_rating %><br>
  <%= f.number_field :friendly_rating, in: 1...11 %><br>

  <%= f.label :aggressive_rating %><br>
  <%= f.number_field :aggressive_rating, in: 1...11 %><br>

  <%= f.label "Image URL" %><br>
  <%= f.text_field :img %><br>

<% end %>
<br>
